                                            @for (int i = 0; i < Math.Floor(contato.Avaliacao); i++)
                                            {
                                                <i class="fas fa-star text-warning"></i>
                                            }
                                            @if ((double)contato.Avaliacao % 1 >= 0.5)
                                            {
                                                <i class="fas fa-star-half-alt text-warning"></i>
                                            }
                                        </div>
